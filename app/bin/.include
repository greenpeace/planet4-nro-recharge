#!/bin/sh
set -a

get_current_year() {
  echo "$(date +"%Y")"
}

get_current_month() {
  echo "$(date +"%m")"
}

get_last_year() {
  # echo $(($(date -d @$(( $(date +"%s") - 24*3600)) +"%Y")-1))
  echo "$(date -d 'last year' +"%Y")"
}

get_last_month() {
  echo "$(date -d 'last month' +"%m")"
}

get_last_month_full() {
  echo "$(date -d 'last month' +"%Y-%m")"
}

get_yesterday() {
  echo "$(date -d 'yesterday' +'%d')"
}

get_yesterday_full() {
  echo "$(date -d 'yesterday' +'%Y-%m-%d')"
}
